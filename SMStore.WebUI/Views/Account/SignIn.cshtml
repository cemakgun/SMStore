@{
    ViewData["Title"] = "Kullanıcı Girişi";
}

<div class="row">
    <div class="col-md-4 m-auto">

<form asp-action="SignIn">
    <h1 class="h3 mb-3 fw-normal">Kullanıcı Girişi</h1>

    <div class="form-floating">
        <input name="email" type="email" class="form-control" id="floatingInput" placeholder="mail@ornekemail.com">
        <label for="floatingInput">Email</label>
    </div>
    <div class="form-floating">
        <input name="sifre" type="password" class="form-control" id="floatingPassword" placeholder="Şifre">
        <label for="floatingPassword">Şifre</label>
    </div>

    <button class="w-100 btn btn-lg btn-primary" type="submit">Giriş Yap</button>
</form>
    </div>
</div>

@TempData["mesaj"]
